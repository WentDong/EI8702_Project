.container {
  padding: 10px;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.grid-item {
  width: 45%; /* 每个格子占据48%的宽度，留出间隙 */
  margin-bottom: 10px;
  padding: 4px;
  background-color: #f8f8f8;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(141, 10, 10);
}

